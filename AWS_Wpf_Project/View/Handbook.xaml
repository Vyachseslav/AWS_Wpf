<Window x:Class="AWS_Wpf_Project.View.Handbook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWS_Wpf_Project.View"
        mc:Ignorable="d"
        Title="Справочники" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Файл" >
                <MenuItem Header="Экспорт">
                    <MenuItem Header="PDF" />
                    <MenuItem Header="Excel" />
                </MenuItem>
                <Separator />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Правка" >
                <MenuItem Header="Обновить" />
                <Separator />
                <MenuItem Header="Создать" />
                <MenuItem Header="Изменить" />
                <MenuItem Header="Удалить" />
            </MenuItem>
            <MenuItem Header="Настройки" >
                <MenuItem Header="Справочники" />
                <MenuItem Header="Константы" />
                <Separator />
                <MenuItem Header="Настройка соединения" />
                <MenuItem Header="Язык" />
            </MenuItem>
            <MenuItem Header="Помощь" >
                <MenuItem Header="Справка" />
                <MenuItem Header="Сообщить об ошибке" />
                <Separator />
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="2" BorderThickness="1" BorderBrush="Gray">
            <TabItem Header="Комплектующие"></TabItem>
            <TabItem Header="Портфели"></TabItem>
            <TabItem Header="Группы комплектующих"></TabItem>
            <TabItem Header="Оборудование"></TabItem>
        </TabControl>
        
    </Grid>
</Window>
